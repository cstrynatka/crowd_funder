<h1>User Profile</h1>

<h2>About</h2>

<%= @user.profile %>

	<%= form_for(current_user) do |f| %>
	<%= f.text_area :profile %>

	<%= f.submit %>

<% end %>

<p>Projects</p>

<% @user.projects.each do |y| %>
<li><%= y.name %></li>
<% end %>

<p>Latest</p>

<% a = Project.find(x.project_id) %>
<li><%= a.name %> - <%= x.amount %>.00</li>

<% end %>

<p><%= link_to "Back to home", projects_url %></p>