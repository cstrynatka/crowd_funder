<%= form_for @project do |f| %>

	<div class="form-label">
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>

	<div class="form-label">
		<%= f.label :goal_in_cents %>
		<%= f.number_field :goal_in_cents %>
	</div>

	<div class="form-label">
		<%= f.label :start_date %>
		<%= f.datetime_select :start_date %>
	</div>

	<div class="form-label">
		<%= f.label :end_date %>
		<%= f.datetime_select :end_date %>
	</div>

	<div class="form-label">
		<%= f.label :description %>
		<%= f. text_area :description %>
	</div>

	<div class="form-label">
		<%= f.label :image %>
		<%= f.text_field :image %>
	</div>

	<div class="form-label">
		<%= f.label :tags, "Tags (separated by comma)" %>
		<%= f.text_field :tag_list %>
	</div>

	<div class="form-label">
		<%= f.submit label_text, class: "button" %>
	</div>

<% end %>